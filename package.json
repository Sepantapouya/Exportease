{
  "name": "exportease",
  "version": "1.0.0",
  "description": "Export local Figma styles and variables to developer-friendly formats",
  "main": "dist/main.js",
  "scripts": {
    "build": "webpack",
    "build:prod": "webpack --mode production",
    "watch": "webpack --watch",
