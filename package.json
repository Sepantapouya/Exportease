    "variables"
  ],
  "author": "Sepanta Pouya",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sepantapouya/exportease"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.88.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.0.0",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  }
}
